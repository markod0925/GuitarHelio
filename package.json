{
  "name": "guitar-helio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "midi:sample": "node scripts/generate-sample-midi.mjs",
    "midi:cli": "node scripts/cli-midi-player.mjs",
    "dev:mobile": "vite --host 0.0.0.0 --port 5173",
    "preview:mobile": "vite preview --host 0.0.0.0 --port 4173",
    "build:android": "npm run build && npx cap sync android",
    "cap:init": "npx cap init GuitarHelio com.guitarhelio.app --web-dir dist",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync android",
    "cap:open:android": "npx cap open android",
    "android:apk:debug": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug"
  },
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "aubiojs": "^0.1.1",
    "phaser": "^3.80.1",
    "@capacitor/core": "^6.2.0"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.1",
    "@capacitor/android": "^6.2.0",
    "@capacitor/cli": "^6.2.0"
  }
}
